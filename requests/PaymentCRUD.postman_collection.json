{
  "info": {
    "name": "Payment CRUD",
    "description": "Coleção CRUD para pagamentos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Criar Pagamento",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"valor\": 150.00,\n  \"usuario_id\": 1,\n  \"descricao\": \"Pagamento de ingresso\"\n}"
        },
        "url": {"raw": "http://localhost:3000/pagamentos", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["pagamentos"]}
      }
    },
    {
      "name": "Listar Pagamentos",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:3000/pagamentos", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["pagamentos"]}
      }
    },
    {
      "name": "Buscar Pagamento por ID",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:3000/pagamentos/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["pagamentos", "1"]}
      }
    },
    {
      "name": "Atualizar Pagamento",
      "request": {
        "method": "PUT",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"descricao\": \"Pagamento de ingresso VIP\"\n}"
        },
        "url": {"raw": "http://localhost:3000/pagamentos/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["pagamentos", "1"]}
      }
    },
    {
      "name": "Deletar Pagamento",
      "request": {
        "method": "DELETE",
        "url": {"raw": "http://localhost:3000/pagamentos/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["pagamentos", "1"]}
      }
    }
  ]
}
