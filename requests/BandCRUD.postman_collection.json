          "mode": "raw",
          "raw": "{\n  \"usuario_id\": 1,\n  \"ano_formacao\": 2020,\n  \"descricao\": \"Banda de rock\",\n  \"tem_instrumentos_proprios\": true,\n  \"aceita_agendamentos\": true,\n  \"preco_base\": 1000,\n  \"tempo_apresentacao_padrao\": 60,\n  \"raio_atuacao\": 50,\n  \"tempo_antecedencia_minimo\": 7\n}"
        },
        "url": {"raw": "http://localhost:3000/bandas", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["bandas"]}
      }
    },
    {
      "name": "Listar Bandas",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:3000/bandas", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["bandas"]}
      }
    },
    {
