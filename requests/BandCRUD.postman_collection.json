      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:3000/bandas/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["bandas", "1"]}
      }
    },
    {
      "name": "Atualizar Banda",
      "request": {
        "method": "PUT",
        "header": [{"key": "Content-Type", "value": "application/json"}],
