          "raw": "{\n  \"descricao\": \"Banda de pop rock\",\n  \"preco_base\": 1200\n}"
        },
        "url": {"raw": "http://localhost:3000/bandas/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["bandas", "1"]}
      }
    },
    {
      "name": "Deletar Banda",
      "request": {
        "method": "DELETE",
        "url": {"raw": "http://localhost:3000/bandas/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["bandas", "1"]}
      }
    },
    {
      "name": "Adicionar Gestor à Banda",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
