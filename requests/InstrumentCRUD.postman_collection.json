{
  "info": {
    "name": "Instrument CRUD",
    "description": "Coleção CRUD para instrumentos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Criar Instrumento",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nome\": \"Guitarra\",\n  \"descricao\": \"Instrumento de cordas\"\n}"
        },
        "url": {"raw": "http://localhost:3000/instrumentos", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["instrumentos"]}
      }
    },
    {
      "name": "Listar Instrumentos",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:3000/instrumentos", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["instrumentos"]}
      }
    },
    {
      "name": "Buscar Instrumento por ID",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:3000/instrumentos/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["instrumentos", "1"]}
      }
    },
    {
      "name": "Atualizar Instrumento",
      "request": {
        "method": "PUT",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"descricao\": \"Guitarra elétrica\"\n}"
        },
        "url": {"raw": "http://localhost:3000/instrumentos/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["instrumentos", "1"]}
      }
    },
    {
      "name": "Deletar Instrumento",
      "request": {
        "method": "DELETE",
        "url": {"raw": "http://localhost:3000/instrumentos/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["instrumentos", "1"]}
      }
    }
  ]
}
