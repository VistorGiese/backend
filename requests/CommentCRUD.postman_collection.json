{
  "info": {
    "name": "Comment CRUD",
    "description": "Coleção CRUD para comentários",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Criar Comentário",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"usuario_id\": 1,\n  \"tipo_destinatario\": \"banda\",\n  \"destinatario_id\": 2,\n  \"comentario\": \"Ótimo show!\",\n  \"data_comentario\": \"2025-09-10T22:00:00\",\n  \"ativo\": true\n}"
        },
        "url": {"raw": "http://localhost:3000/comentarios", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["comentarios"]}
      }
    },
    {
      "name": "Listar Comentários",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:3000/comentarios", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["comentarios"]}
      }
    },
    {
      "name": "Buscar Comentário por ID",
      "request": {
        "method": "GET",
        "url": {"raw": "http://localhost:3000/comentarios/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["comentarios", "1"]}
      }
    },
    {
      "name": "Atualizar Comentário",
      "request": {
        "method": "PUT",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"comentario\": \"Show excelente!\"\n}"
        },
        "url": {"raw": "http://localhost:3000/comentarios/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["comentarios", "1"]}
      }
    },
    {
      "name": "Deletar Comentário",
      "request": {
        "method": "DELETE",
        "url": {"raw": "http://localhost:3000/comentarios/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["comentarios", "1"]}
      }
    }
  ]
}
